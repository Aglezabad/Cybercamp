<% extend 'layout/html' %>

<div class="row">
	<div class="col-xs-12">
		<ol class="breadcrumb">
			<li><a href="/"><%=@__("Home")%></a></li>
			<li><%=@__("Login")%></li>
		</ol>
	</div>
</div>
<div class="row">
	<% if @info? : %>
		<div class="col-lg-12">
			<div class="alert alert-danger alert-dismissible">
				<button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only"><%=@__("Close")%></span></button>
				<p><%=@__(@info.message)%></p>
			</div>
		</div>
	<% end %>
	<div class="col-lg-5 col-md-6 col-sm-8 col-lg-offset-1 col-sm-offset-2 col-md-offset-0">
		<div class="panel panel-default">
			<div class="panel-heading">
				<h1 class="panel-title">
					<%=@__("Login")%>
				</h1>
			</div>
			<div class="panel-body">
				<form class="form-horizontal" action="/<%=@routes.prefix%>login" method="post">
					<div class="form-group">
						<label for="username" class="col-sm-2 control-label">
							<%=@__("Username")%>
						</label>
						<div class="col-sm-10">
							<input type="text" class="form-control" id="username" name="username" placeholder="<%=@__("Username")%>" required>
						</div>
					</div>
					<div class="form-group">
						<label for="password" class="col-sm-2 control-label">
							<%=@__("Password")%>
						</label>
						<div class="col-sm-10">
							<input type="password" class="form-control" id="password" name="password" placeholder="<%=@__("Password")%>" required>
						</div>
					</div>
					<div class="form-group">
						<div class="col-sm-offset-2 col-sm-10">
							<button type="submit" class="btn btn-primary btn-block">
								<%=@__("Login")%>
							</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
	<div class="col-lg-5 col-md-6 col-sm-8 col-sm-offset-2 col-md-offset-0">
		<div class="panel panel-default">
			<div class="panel-heading">
				<h2 class="panel-title">
					<%=@__("Register")%>
				</h2>
			</div>
			<div class="panel-body">
				<p>
					<%=@__("To use all functions of ")+@app.name+@__(", you need an account.")%>
				</p>
				<a class="btn btn-lg btn-primary btn-block" href="/<%=@routes.prefix%>register">
					<%=@__("Register account")%>
				</a>
			</div>
		</div>
	</div>
</div>